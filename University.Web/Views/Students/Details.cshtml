@model University.Web.Models.ViewModels.StudentDetailsViewModel

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Student</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Avatar)
		</dt>
		<dd class="col-sm-10">
			<img src="@Html.DisplayFor(model => model.Avatar)" alt="Profile image" />
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Name.FirstName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name.FirstName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Name.LastName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name.LastName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Address.City)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Address.City)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Address.Street)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Address.Street)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Address.ZipCode)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Address.ZipCode)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.CourseCount)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CourseCount)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.CourseInfos)
		</dt>
		<dd class="col-sm-10">
			@foreach (var course in Model.Courses)
			{
				<p>
					@Html.ActionLink(course.Title, "CourseDetails", "Students", new { courseId = course.Id }, null)
					<span><strong>Grade:</strong> @Model.Enrollments.FirstOrDefault(e => e.CourseId == course.Id)?.Grade</span>
				</p>
			}
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>

