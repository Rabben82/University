@model University.Web.Models.ViewModels.CourseDetailsViewModel

@{
	ViewData["Title"] = "CourseDetails";
}

<h1>Course Details</h1>

<div>
	<h4>Students</h4>
	<hr />
	<dl class="row">
		<dd class="col-sm-10">
			@foreach (var student in Model.Students)
			{
				<p>
					<a asp-action="Details" asp-controller="Students" asp-route-id="@student.Id">
						@student.Name.FullName
					</a>
				</p>
			}
		</dd>
	</dl>
</div>

