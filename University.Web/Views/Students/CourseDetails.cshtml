@model University.Web.Models.ViewModels.CourseDetailsViewModel

@{
	ViewData["Title"] = "CourseDetails";
}

<h1>Course Details</h1>

<div>
	<h4>Students</h4>
	<hr />
	<dl class="row">
		<dd class="col-sm-10">
			@foreach (var student in Model.Students)
			{
				<p>@Html.ActionLink(student.Name.FullName, "Details", "Students", new { id = student.Id }, null)</p>
			}
		</dd>
	</dl>
</div>

